wordpress:
    image: wordpress:{{ project.wp_version }}-php8.1-fpm
    ports:
      - '9000:9000'
    volumes:
      - ./wordpress:/var/www/html
    environment:
      - WORDPRESS_DB_NAME={{ project.wp_db_name }}
      - WORDPRESS_DB_USER={{ project.wp_db_user }}
      - WORDPRESS_TABLE_PREFIX={{ project.wp_db_tb_pre }}
      - WORDPRESS_DB_HOST={{ project.wp_db_host }}
      - WORDPRESS_DB_PASSWORD={{ project.wp_db_psw }}
    restart: always
